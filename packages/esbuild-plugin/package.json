{
  "name": "@univerjs/esbuild-plugin",
  "type": "commonjs",
  "version": "0.5.0",
  "private": false,
  "description": "Esbuild plugin for easily integrating Univer",
  "author": "DreamNum <developer@univer.ai>",
  "license": "Apache-2.0",
  "keywords": [
    "univer",
    "univerjs",
    "esbuild",
    "esbuild plugin"
  ],
  "exports": {
    ".": "./lib/index.js",
    "./types": "./types.d.ts"
  },
  "main": "./lib/index.js",
  "types": "./lib/types/index.d.ts",
  "files": [
    "lib",
    "types.d.ts"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc && node ./esbuild.config.js"
  },
  "devDependencies": {
    "@types/node": "^22.7.5",
    "@univerjs/plugin-core": "workspace:*",
    "esbuild": "^0.24.0",
    "typescript": "^5.6.3"
  }
}
